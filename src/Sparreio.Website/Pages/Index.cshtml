<body>

    <div class="container d-flex h-100">
        <div class="row align-self-center">
            <div class="container">
                <div>sparre.io</div>
                <div>
                    <h1>Christian Sparre</h1>
                </div>
                <p>Hi, I'm Christian. I live in Denmark and develop software. Follow the links below to learn more about me.</p>
            </div>
            <div class="container links">
                <div class="d-flex flex-row">
                    <div class="p-2 text-center link-item">
                        <a href="https://www.linkedin.com/in/christiansparre/" target="_blank">
                            <i class="fab fa-linkedin fa-3x"></i>
                            <div class="text">LinkedIn</div>
                        </a>
                    </div>
                    <div class="p-2 text-center link-item">
                        <a href="https://medium.com/@@christiansparre" target="_blank">
                            <i class="fab fa-medium fa-3x"></i>
                            <div class="text">My blog</div>
                        </a>
                    </div>
                    <div class="p-2 text-center link-item">
                        <a href="https://github.com/christiansparre" target="_blank">
                            <i class="fab fa-github fa-3x"></i>
                            <div class="text">Github</div>
                        </a>
                    </div>
                    <div class="p-2 text-center link-item">
                        <a href="https://twitter.com/chrsparre" target="_blank">
                            <i class="fab fa-twitter fa-3x"></i>
                            <div class="text">Twitter</div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>

    <environment names="Development">
        <script src="/lib/bootstrap/js/bootstrap.min.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    </environment>
